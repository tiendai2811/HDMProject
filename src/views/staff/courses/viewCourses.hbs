<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="images/clbglogo.png" type="image/x-icon">
    <title>Môn học</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sideBar.css">
    <style>
        .trash {
            position: relative;
        }

        .trash i {
            color: #9fa5ab;
            font-size: 28px;
        }

        .trash-count {
            position: absolute;
            top: -10px;
            left: 15px;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: rgba(177, 181, 186, 0.746);
            text-align: center;
            line-height: 20px;
            color: #c95a32;
            font-weight: 700;
        }

        .animation-trash {
            animation: trash 1s ease-in-out 1;
        }

        .form-search:focus,
        .btn-search:focus,
        .btn-search:active:focus {
            box-shadow: none;
        }

        @keyframes trash {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
                color: #c94132;
            }

            100% {
                transform: scale(1);
            }
        }
    </style>
</head>

<body>
    {{> header}}
    <div class="wrapper">
        {{> sidebarStaff}}
        <div class="main_content">
            <div class="container">
                <div class="d-flex justify-content-between mt-3">
                    <div class="d-flex">
                        <a class="me-5 btn btn-success" href="/staff/viewCourses/create">Thêm môn học</a>
                        <a class="me-4 align-self-end text-decoration-none" href="/staff/viewCourses/trash/store">
                            <div class="trash">
                                <i class="fa fa-trash"></i>
                                {{#if countDocumentsDeleted}}
                                <span class="trash-count animation-trash">
                                    {{countDocumentsDeleted}}
                                </span>
                                {{else}}
                                <span class="trash-count">
                                    {{countDocumentsDeleted}}
                                </span>
                                {{/if}}
                            </div>
                        </a>
                    </div>
                    <div>
                        <form class="d-flex input-group" method="get" action="/staff/viewCourses/search">
                            <input class="form-control form-search" type="text" name="search" id="search"
                                placeholder="Tìm môn học">
                            <button type="submit" class="btn btn-primary btn-search">Tìm kiếm</button>
                        </form>
                    </div>
                </div>
                <table class="table table-bordered my-3">
                    <thead class="bg-warning">
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Môn học</th>
                            <th scope="col">Phân loại</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Thời gian tạo</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if courses}}
                        {{#each courses}}
                        <tr>
                            <th>{{sum @index}}</th>
                            <td>{{this.name}}</td>
                            <td>{{this.nameCategory}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.dateCreated}}</td>
                            <td class="text-center">
                                <a class="btn btn-secondary" href="/staff/viewCourses/{{this._id}}">Chi tiết</a>
                                <a class="btn btn-primary" href="/staff/viewCourses/{{this._id}}/edit">Sửa</a>
                                <a class="btn btn-danger" href="" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-id="{{this._id}}">Xoá</a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6" class="text-center">Bạn không có môn học nào</td>
                        </tr>
                        {{/each}}
                        {{else}}
                        {{#if course}}
                        <tr>
                            <th>1</th>
                            <td>{{course.name}}</td>
                            <td>{{course.nameCategory}}</td>
                            <td>{{course.description}}</td>
                            <td>{{course.dateCreated}}</td>
                            <td>
                                <a class="btn btn-secondary" href="/staff/viewCourses/{{course._id}}">Chi tiết môn học</a>    
                                <a class="btn btn-primary" href="/staff/viewCourses/{{course._id}}/edit">Sửa</a>
                                <a class="btn btn-danger" href="" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-id="{{course._id}}">Xoá</a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan='6' class='text-center'>Không tìm thấy môn học này</td>
                        </tr>
                        {{/if}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{> footer}}
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xoá môn học</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc muốn xoá môn học này ?
                </div>
                <div class="modal-footer">
                    <button id="btn-delete-course" type="button" class="btn btn-danger">Xác nhận</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <form class="form-delete" method="post"></form>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let courseId;
            let deleteForm = document.querySelector('.form-delete')
            let btnDeleteCourse = document.querySelector('#btn-delete-course')
            let deleteModal = document.getElementById('deleteModal')
            deleteModal.addEventListener('show.bs.modal', function (event) {
                // Button that triggered the modal
                let button = event.relatedTarget
                // Extract info from data-bs-* attributes
                courseId = button.getAttribute('data-id')
            })
            btnDeleteCourse.onclick = () => {
                deleteForm.action = `/staff/viewCourses/${courseId}?_method=DELETE`;
                deleteForm.submit();
            }
        })
    </script>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>