<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="images/clbglogo.png" type="image/x-icon">
    <title>Sửa môn học</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sideBar.css">
    <style>
        .content {
            width: 80%;
            margin: 30px auto 0;
        }
    </style>
</head>

<body>
    {{> header}}
    <div class="wrapper">
        {{> sidebarStaff}}
        <div class="main_content">
            <div class="container">
                <div class="content">
                    {{#if addFailed}}
                    <div class="alert alert-danger mt-4" id="addFailed">Thông tin không hợp lệ</div>
                    {{/if}}
                    <form method="post" action="/staff/viewCourses/{{course._id}}?_method=PUT">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên môn học</label>
                            <input type="text" class="form-control" value="{{course.name}}" name="name" id="name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Chọn danh mục</label>
                            <select name="idCategory" class="form-select">
                                <option disabled>-------------</option>
                                {{#each categories}}
                                {{#if (compare this._id ../course.idCategory)}}
                                <option value="{{this._id}}" selected>{{this.name}}</option>
                                {{else}}
                                <option value="{{this._id}}">{{this.name}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Mô tả môn học</label>
                            <textarea type="text" class="form-control" name="description"
                                id="description">{{course.description}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Sửa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{> footer}}

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
    <script>
        let inputs = document.querySelectorAll('input');
        let addFailed = document.querySelector("#addFailed");
        for (input of inputs) {
            input.onclick = () => {
                addFailed.style.display = "none";
            }
        }
    </script>
</body>

</html>